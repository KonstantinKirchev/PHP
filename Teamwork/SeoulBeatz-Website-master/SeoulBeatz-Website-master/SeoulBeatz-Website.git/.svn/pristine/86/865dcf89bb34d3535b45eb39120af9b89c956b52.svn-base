body {
    margin: 0;
    padding: 0;

    background-color: #696969;
}

.background-image {
    width: 100%;

    left: 0;
    right: 0;

    z-index: 1;

    display: block;

    filter: blur(10px);
    -webkit-filter: blur(10px);

    position: fixed;

    background-size: cover;
    background-image: url("../Images/login-background.jpg");
}

#wrapper {
    top: 10px;
    right: 0;
    left: 0;

    border-radius: 3px;

    position: fixed;

    margin: 10px 20px;
    padding: 0 10px;

    z-index: 2;

    background: rgba(100, 100, 100, 0.35);
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.25);
}

#wrapper > section {
    width: 40%;
    float: left;

    padding: 10px;
    margin: 25% 5%;
    box-sizing: border-box;
}

#wrapper > section.login {
    margin: 28.5% 5%;
}

#wrapper > section > form > ul > li {
    width: 100%;
    list-style: none;
}

#wrapper > section > form > ul > li > label {
    width: 30%;
    padding: 10px;

    color: #FFFFFF;
    font-size: 18px;

    text-align: right;
    display: inline-block;
}

#wrapper > section > form > ul > li > input {
    height: 30px;
    margin: 10px 2px;
    display: inline-block;
}

#wrapper > section > form > ul > li > input[type='submit'] {
    width: 100%;
    color: #FFF;
    font-weight: bold;

    font-size: 18px;

    border: none;
    background-color: #9fe400;
}

#wrapper > section.login {
    display: inline;
    vertical-align: bottom;
}

#wrapper::after {
    content: "";
    clear: both;
    display: block;
}