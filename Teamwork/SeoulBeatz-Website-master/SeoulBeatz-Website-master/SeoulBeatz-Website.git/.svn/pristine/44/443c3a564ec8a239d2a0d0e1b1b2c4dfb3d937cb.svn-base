body {
    margin: 0;
    padding: 0;

    background-color: #303030;
}

#wrapper > header {
    width: 100%;
    height: 70px;

    top:0;
    position: fixed;
    z-index: 3;
    background-color: #000;
}

#wrapper > header > img {
    margin-top: 10px;
}

#wrapper > header > div {
    float: right;
    text-align: center;
}

#wrapper > header > div > span {
    width: 120px;
    color: #FFF;
    font-size: 24px;

    display: inline-block;

    cursor: pointer;
    margin: 0 30px 0px 10px;
}

#wrapper > header > div:hover > span {
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    background-color: #9fe400;
}

#wrapper > header > div > div {
    display: none;

    width: 120px;
    z-index: 2;
    margin-top: 0;
    margin-left: 10px;
    background-color: #9fe400;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}

#wrapper > header > div > div > a {
    color: #FFFFFF;
    padding: 10px;
    text-decoration: none;
}

#wrapper > header > div > div > a > p {
    margin: 0;
    font-size: 18px;
    font-weight: bold;
    text-align: center;
}

#wrapper > header > div > div > a.middle > p {
    padding: 10px;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
}

#wrapper > header > div:hover > div {
    display: block;
    position: relative;
}

#wrapper > header > form {
    top: 30px;
    right: 30px;

    z-index: 1;
    position: absolute;
}

#wrapper > header > form > input[type='submit'] {
    color: #FFF;

    border: 1px solid #9fe400;
    background-color: #9fe400;
}

#wrapper > header::after {
    content: "";
    clear: both;
    display: block;
}

#wrapper > section {
    width: 100%;

    z-index: 2;
    position: relative;
}

#wrapper > section > nav {
    width: 100%;
    height: 30px;

    z-index: 2;
    position: relative;

    margin-top: 69px;

    background-color: #000000;
}

#wrapper > section > nav > ul {
    width: 900px;
    margin: 0 auto;
    display: block;
}

#wrapper > section > nav > ul > li {
    float: left;
    width: 200px;

    margin: 5px 10px;
    list-style: none;
}

#wrapper > section > nav > ul > li:hover {
    border-radius: 10px 10px 0 0;

    background-color: #9fe400;
}

#wrapper > section > nav > ul > li > ul {
    position: absolute;
    width: 160px;
    list-style: none;
    background-color: #9fe400;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    display: none;
}

#wrapper > section > nav > ul > li > ul > li {
    width: 100%;
    margin: 10px 0 10px -20px
}

#wrapper > section > nav > ul > li > ul > li > a {
    color: #FFF;

    width: 100%;
    display: inline-block;

    text-align: center;
    text-decoration: none;
}

#wrapper > section > nav > ul > li:hover > ul {
    display: block;
}

#wrapper > section > nav > ul > li > a {
    width: 200px;
    color: #FFFFFF;

    display: inline-block;

    text-align: center;
    text-decoration: none;
}

#wrapper > section > nav > ul > li.current-page {
    border-radius: 10px;

    background-color: #9fe400;
}

#wrapper > section > nav > ul::after {
    content: "";
    clear: both;
    display: block;
}

#wrapper > section.content-wrapper {
    width: 900px;

    margin: 0 auto;
}

#wrapper > footer {
    width: 100%;

    padding: 15px;

    z-index: 2;
    position: relative;

    background-color: #000;
}

#wrapper > footer > p {
    width: 900px;
    height: 50px;

    color: #FFF;
    line-height: 50px;
    text-align: center;

    margin: 0 auto;
}